{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "commonjs",
    "outDir": "./build",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src"
  },
  "include": [
    "src",
  ],
  "exclude": ["node-modules"]
}